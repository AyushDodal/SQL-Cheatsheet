WITH cte AS (
  SELECT 
    server_id, 
    session_status, 
    status_time,
    LEAD(status_time) OVER (PARTITION BY server_id ORDER BY status_time) AS next_status_time
  FROM server_utilization
),
cte2 AS (
  SELECT 
    server_id, 
    session_status, 
    EXTRACT(EPOCH FROM next_status_time - status_time) AS uptime_seconds
  FROM cte
  WHERE session_status = 'start'
)
SELECT 
  SUM(ROUND(uptime_seconds / 86400)) AS total_uptime_days
FROM cte2;
